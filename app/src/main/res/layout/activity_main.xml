<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="upwork.com.revisedapp.MainActivity">

        <ImageView
            android:id="@+id/checkicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/splash"
            tools:ignore="ContentDescription"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="124dp"
            android:layout_height="67dp"
            app:srcCompat="@drawable/logo"
            tools:ignore="ContentDescription"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="44dp"
            android:layout_marginTop="25dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/checkicon"
            android:layout_marginLeft="44dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="129dp"
            android:layout_height="67dp"
            android:layout_marginBottom="115dp"
            android:layout_marginLeft="54dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/mark"
            tools:ignore="ContentDescription,RtlHardcoded"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="54dp" />

        <Button
            android:id="@+id/signup"
            android:layout_width="86dp"
            android:layout_height="38dp"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/buttoncolor"
            android:text="@string/signup"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:text="@string/signup" />

        <Button
            android:id="@+id/login"
            android:layout_width="86dp"
            android:layout_height="38dp"
            android:background="@color/buttoncolor"
            android:text="@string/signin"
            android:textColor="@android:color/white"
            tools:text="@string/signin"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="135dp"
            android:layout_marginEnd="30dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="20dp"
            app:layout_constraintGuide_end="359dp" />

</android.support.constraint.ConstraintLayout>
