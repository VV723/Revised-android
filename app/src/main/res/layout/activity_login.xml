<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="upwork.com.revisedapp.LoginActivity">

        <ImageView
            android:id="@+id/checkicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/background1"
            tools:ignore="ContentDescription"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="126dp"
            android:layout_height="81dp"
            app:srcCompat="@drawable/logo"
            tools:ignore="ContentDescription"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="43dp"
            android:layout_marginTop="25dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/checkicon"
            android:layout_marginLeft="43dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="53dp"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="43dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/mark"
            tools:ignore="ContentDescription,RtlHardcoded"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="43dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_marginBottom="70dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:background="@color/buttoncolor"
            android:text="@string/login"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:text="@string/login" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/checkicon"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/checkicon"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/checkicon"
            app:layout_constraintBottom_toBottomOf="@+id/checkicon"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.43">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:text="@string/email"
                    android:textColor="@color/textcolor"
                    android:textSize="22sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2"
                    tools:layout_constraintLeft_creator="1"
                    tools:layout_constraintTop_creator="1" />

                <EditText
                    android:id="@+id/txtemail"
                    android:layout_width="213dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    tools:layout_conversion_absoluteHeight="41dp"
                    tools:layout_conversion_absoluteWidth="213dp"
                    tools:layout_conversion_absoluteX="98dp"
                    tools:layout_conversion_absoluteY="279dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="@string/password"
                    android:textColor="@color/textcolor"
                    android:textSize="22sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtemail"
                    tools:layout_conversion_absoluteHeight="16dp"
                    tools:layout_conversion_absoluteWidth="62dp"
                    tools:layout_conversion_absoluteX="98dp"
                    tools:layout_conversion_absoluteY="321dp" />

                <EditText
                    android:id="@+id/txtpassword"
                    android:layout_width="213dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    tools:layout_conversion_absoluteHeight="41dp"
                    tools:layout_conversion_absoluteWidth="213dp"
                    tools:layout_conversion_absoluteX="98dp"
                    tools:layout_conversion_absoluteY="338dp" />

                <Button
                    android:id="@+id/forgetpassword"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:text="@string/forgetpassword"
                    android:textAlignment="textEnd"
                    android:textAllCaps="false"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp"
                    app:layout_constraintRight_toRightOf="@+id/txtpassword"
                    app:layout_constraintTop_toBottomOf="@+id/txtpassword"
                    tools:layout_conversion_absoluteHeight="40dp"
                    tools:layout_conversion_absoluteWidth="131dp"
                    tools:layout_conversion_absoluteX="98dp"
                    tools:layout_conversion_absoluteY="380dp" />
        </LinearLayout>

</android.support.constraint.ConstraintLayout>
